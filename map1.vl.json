{
    "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
    "width": "container",
    "height": "container",
    "autosize": {
      "type": "fit",
      "contains": "padding"
    },
    "data": {
      "url": "ZCTA.geo.json",
      "format": {"property": "features"}
    },
    "transform": [{
      "lookup": "properties.MODZCTA",
      "from": {
        "data": {
          "url": "FakeZCTAData.csv"
        },
        "key": "zcta",
        "fields": ["zcta","time","cases","rate","pctpos"]
      }
    }],
    "mark": {
      "type": "geoshape",
      "stroke": "#c7c7c7",
      "strokeWidth": 0.5
    },
    "encoding": {
      "color": {
          "field":"cases",
          "type":"quantitative",
          "scale": {"scheme": "Viridis"},
          "legend": {
              "title": "Case Count",
              "orient":"top-left"
          }
      },
        
      "tooltip": [
        {"field": "zcta", "type": "nominal", "title":"ZipCode"},
        {"field": "cases", "type": "quantitative", "title":"Cases"},
        {"field": "rate", "type": "quantitative", "title":"Rate"},
        {"field": "pctpos", "type": "quantitative", "title":"Percent Positive"}
      ]
    }
  }