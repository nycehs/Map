{
    "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
    "width": "container",
    "height": "container",
    "autosize": {"type": "fit", "contains": "padding"},
    "layer":[
      {
      "data":{
      "url": "MODZCTA_2010_WGS1984.topo.json",
      "format": {"type": "topojson", "feature": "collection"}
      },
      "mark": {"type": "geoshape", "stroke": "#ffffff","fill":"lightgray"}
    },{
    "data": {
      "url": "zcta_points.csv"
    },
    "transform": [
      {
        "lookup": "MODZCTA",
        "from": {
          "data": {"url": "FAKE-4-WEEK.csv"},
          "key": "modzcta",
          "fields": [
            "modzcta",
            "neighborhood_name",
            "death_4week"
          ]
        },
        "default": "no data"
      }
    ],
    "selection": {
      "highlight": {"type": "single", "empty": "none", "on": "mouseover"}
    },
    "mark": {"type": "circle", "stroke": "#8A2BE2","fill":"red","fillOpacity": 0.5},
    "encoding": {
        "latitude":{"field":"lat","type": "quantitative"},
        "longitude":{"field":"lon","type": "quantitative"},
      "size": {
        "bin": false,
        "field": "death_4week",
        "type": "quantitative",
        "scale": {"range": [0, 250]},
        "legend": {
          "title": "4-week deaths",
          "titleFontSize": 10,
          "orient": "top-left",
          "symbolLimit": 5,
          "symbolOpacity": 0.5,
          "values":[10,50,100]

        }
      },
      "strokeWidth": {
        "condition": [{"selection": "highlight", "value": 2}],
        "value": 0.5
      },
      "tooltip": [
        {
          "field": "MODIFIED_ZCTA",
          "type": "nominal",
          "title": "ZIP Code"
        },
        {
          "field": "neighborhood_name",
          "type": "nominal",
          "title": "Neighborhood"
        },
        {"field": "death_4week",
        "type": "quantitative",
        "title": "Deaths"
        }
      ]
    }
  }]
  }